              <Select value={formalityLevel} onValueChange={setFormalityLevel}>
                <SelectTrigger>
                  <SelectValue placeholder={getTranslation('selectFormality')} />
                </SelectTrigger>
                <SelectContent>
                  {formalityLevels.map((level) => (
                    <SelectItem key={level.value} value={level.value}>
                      {level.label}
                    </SelectItem>
                  ))}
