          <CardHeader>
            <CardTitle>{getTranslation('englishTranslation')}</CardTitle>
          </CardHeader>
          <CardContent>
            <Textarea
              placeholder={getTranslation('englishPlaceholder')}
              value={englishText}
              readOnly
              className="min-h-[200px]"
            />
